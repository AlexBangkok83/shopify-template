{
  "version": 2,
  "name": "multi-brand-ecommerce-template",
  "builds": [
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/config.js",
      "dest": "/config.js",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/assets/css/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css"
        }
      ]
    },
    {
      "source": "/assets/js/(.*)",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "application/javascript"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/product",
      "destination": "/product.html",
      "permanent": false
    },
    {
      "source": "/contact",
      "destination": "/contact.html", 
      "permanent": false
    },
    {
      "source": "/about",
      "destination": "/about.html",
      "permanent": false
    },
    {
      "source": "/privacy",
      "destination": "/privacy.html",
      "permanent": false
    },
    {
      "source": "/terms",
      "destination": "/terms.html",
      "permanent": false
    },
    {
      "source": "/faq",
      "destination": "/faq.html",
      "permanent": false
    },
    {
      "source": "/reviews",
      "destination": "/reviews.html",
      "permanent": false
    }
  ],
  "functions": {
    "build/assets/js/*.js": {
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}